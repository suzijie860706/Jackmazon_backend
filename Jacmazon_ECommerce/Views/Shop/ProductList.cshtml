@using Jacmazon_ECommerce.Extensions

@model PagedResult<Product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/css//pagination.css" />
    <title>ProductList</title>
</head>
<body>
    <table class="table" border="1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ProductNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].StandardCost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ListPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ProductCategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ProductModelId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].SellStartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].SellEndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].DiscontinuedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ThumbNailPhoto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ThumbnailPhotoFileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Results[0].ModifiedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Results)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StandardCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ListPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductCategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductModelId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellEndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiscontinuedDate)
                    </td>
                    <td>
                        <img id="@nameof(item.ThumbNailPhoto)"  src="@Url.Action("GetImage", "WebAPI", new {id = item.ProductId})" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThumbnailPhotoFileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    @(await Component.InvokeAsync<PagerViewComponent>(Model))
</body>
</html>
